<!DOCTYPE html>
<html>
    <head>
        <title>Week2-1</title>
        <meta charset="UTF-8">
    </head>

    <script>

       function star(n){

        let m=parseInt(n);
        if(isNaN(m)){
            document.write("입력 오류입니다.");
        }
        else{
            for(let i=0; i<m; i++){

                for(let j=0; j<=i; j++){
                    document.write("*");
                }
                document.write("<br>");

            }
        }

       }
        
      


    </script>

    <body>
       
        <h3>별 문자 출력하기</h3>
        <hr>
        <script>

            let n=prompt("별 문자 출력하기","");
            star(n);


        </script>
       
   
    </body>
 </html>
